<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nextpin.app.dao.CommunityMapper">
    <select id="getAllCourses" resultType="com.nextpin.app.dto.CourseDto">
        SELECT * FROM course
    </select>

    <select id="getCourseDetailsByCourseId" parameterType="int" resultType="com.nextpin.app.dto.CourseDetailDto">
        SELECT * FROM course_detail WHERE courseId = #{courseId}
    </select>
</mapper>
